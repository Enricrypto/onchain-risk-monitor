# RPC Configuration
RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY
# Alternative: https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Aave V3 Sepolia Contract Addresses
AAVE_POOL_ADDRESS=0x6Ae43d3271ff6888e7Fc43Fd7321a503ff738951
AAVE_POOL_DATA_PROVIDER=0x3e9708d80f7B3e43118013075F7e95CE3AB31F31

# Prometheus Configuration
METRICS_PORT=9090
METRICS_PATH=/metrics

# Alerting - Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Alerting - Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_FROM=alerts@yourdomain.com
ALERT_EMAIL_TO=your_email@gmail.com

# Collector Configuration
POLLING_INTERVAL_MS=30000
EVENT_CONFIRMATION_BLOCKS=2

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/collector.log

# Network
CHAIN_ID=11155111
NETWORK_NAME=sepolia

# Grafana (for Docker Compose)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3000
